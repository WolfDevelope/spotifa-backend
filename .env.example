# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/spotifa

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES_IN=30

# Email Configuration (for development with Mailtrap)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your_mailtrap_username
EMAIL_PASSWORD=your_mailtrap_password
EMAIL_FROM=Spotifa <noreply@spotifa.com>

# Email Configuration (for production with SendGrid)
# SENDGRID_USERNAME=your_sendgrid_username
# SENDGRID_PASSWORD=your_sendgrid_password

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15 minutes
RATE_LIMIT_MAX=100  # 100 requests per window

# Security
PASSWORD_RESET_EXPIRES=10  # minutes
EMAIL_VERIFICATION_EXPIRES=1440  # 24 hours in minutes
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=30  # minutes
